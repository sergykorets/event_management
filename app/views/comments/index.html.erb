<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.email %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Show', event_comment_path(@event, comment) %></td>
        <td><%= link_to 'Edit', edit_event_comment_path(@event, comment) %></td>
        <td><%= link_to 'Destroy', event_comment_path(@event, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

